{{#each this}}
<h1 class="country-title">{{name}}</h1>
<div class="country-card">
    <div class="country-description">
        <p><span class = "characteristic">Capital:</span> {{capital}}</p>
        <p><span class = "characteristic">Population:</span> {{population}}</p>
        <ul class = "languages-list"><span class = "characteristic">Languages:</span>
            {{#each languages}}
            <li class = "languages-item">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <img src="{{flag}}" alt="flag" width="200">
</div>
{{/each}}